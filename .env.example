# Configurações do MongoDB
MONGODB_URI=mongodb://localhost:27017/amanda_bot

# Chaves de API
GEMINI_API_KEY=sua_chave_gemini_aqui

# Configurações do Bot
NODE_ENV=production
LOG_LEVEL=info
MAX_RETRIES=3
RATE_LIMIT=60

# Configurações de Performance
NODE_OPTIONS="--max-old-space-size=2048"
ENABLE_QUEUE=true
MAX_CONCURRENT=5

# Configurações de Timeout
API_TIMEOUT=30000
DB_TIMEOUT=5000

# Configurações de Cache
CACHE_TTL=3600
ENABLE_CACHE=true

# String de conexão do MongoDB Atlas (banco de destino)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/amanda_bot?retryWrites=true&w=majority

# String de conexão do MongoDB Atlas (banco de origem)
SOURCE_MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/amanda_bot?retryWrites=true&w=majority 